{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "esnext"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "declaration": true,
    "isolatedModules": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
